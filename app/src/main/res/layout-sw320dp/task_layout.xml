<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/turquoise"
    android:descendantFocusability="beforeDescendants"
    tools:context="com.violenthoboenterprises.blistful.MainActivity"
    android:id="@+id/taskLayout">

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="100dp"
        android:visibility="gone"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="ca-app-pub-2378583121223638/3959260925"
        app:layout_constraintBottom_toTopOf="@+id/mainTaskView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/banner"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:contentDescription="@string/accessBannerPromptingUser"
        android:elevation="100dp"
        android:onClick="showPro"
        android:src="@drawable/banner"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/mainTaskView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/mainTaskView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/color_picker_border_white"
        android:elevation="50dp"
        app:layout_constraintBottom_toTopOf="@+id/propertiesView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/banner">

        <TextView
            android:id="@+id/tvTask"
            android:layout_width="345dp"
            android:layout_height="60dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:elevation="100dp"
            android:gravity="center_vertical"
            android:textSize="20sp"
            ads:layout_constraintEnd_toEndOf="@+id/mainTaskView"
            ads:layout_constraintStart_toStartOf="@+id/mainTaskView"
            ads:layout_constraintTop_toTopOf="@+id/mainTaskView" />

        <TextView
            android:id="@+id/tvDue"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:textAlignment="center"
            android:visibility="gone"
            ads:layout_constraintBottom_toBottomOf="@+id/mainTaskView"
            ads:layout_constraintEnd_toStartOf="@+id/checklistClearWhite"
            ads:layout_constraintStart_toStartOf="@+id/mainTaskView"
            ads:layout_constraintTop_toBottomOf="@+id/tvTask" />

        <ImageView
            android:id="@+id/checklistClearWhite"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:contentDescription="@string/accessSubtasksIcon"
            android:elevation="100dp"
            android:src="@drawable/subtasks_icon_light"
            android:visibility="gone"
            ads:layout_constraintBottom_toBottomOf="@+id/mainTaskView"
            ads:layout_constraintEnd_toStartOf="@+id/noteClearWhite"
            ads:layout_constraintTop_toBottomOf="@+id/tvTask" />

        <ImageView
            android:id="@+id/noteClearWhite"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:contentDescription="@string/accessNoteIcon"
            android:elevation="100dp"
            android:src="@drawable/note_icon_light"
            android:visibility="gone"
            ads:layout_constraintBottom_toBottomOf="@+id/mainTaskView"
            ads:layout_constraintEnd_toStartOf="@+id/repeatClearWhite"
            ads:layout_constraintTop_toBottomOf="@+id/tvTask" />

        <ImageView
            android:id="@+id/repeatClearWhite"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:contentDescription="@string/accessRepeatIcon"
            android:elevation="100dp"
            android:src="@drawable/repeat_icon_light"
            android:visibility="gone"
            ads:layout_constraintBottom_toBottomOf="@+id/mainTaskView"
            ads:layout_constraintEnd_toStartOf="@+id/dueClearWhite"
            ads:layout_constraintTop_toBottomOf="@+id/tvTask" />

        <ImageView
            android:id="@+id/dueClearWhite"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:contentDescription="@string/accessDueIcon"
            android:elevation="100dp"
            android:src="@drawable/due_icon_light"
            android:visibility="gone"
            ads:layout_constraintBottom_toBottomOf="@+id/mainTaskView"
            ads:layout_constraintEnd_toEndOf="@+id/mainTaskView"
            ads:layout_constraintTop_toBottomOf="@+id/tvTask" />

        <ImageView
            android:id="@+id/overdueClearWhite"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:contentDescription="@string/accessOverdueIcon"
            android:src="@drawable/overdue_icon_light"
            android:visibility="gone"
            ads:layout_constraintBottom_toBottomOf="@+id/mainTaskView"
            ads:layout_constraintEnd_toEndOf="@+id/mainTaskView"
            ads:layout_constraintTop_toBottomOf="@+id/tvTask" />

        <ImageView
            android:id="@+id/snoozeClearWhite"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:contentDescription="@string/accessSnoozeIcon"
            android:src="@drawable/snooze_icon_white"
            android:visibility="gone"
            ads:layout_constraintBottom_toBottomOf="@+id/mainTaskView"
            ads:layout_constraintEnd_toEndOf="@+id/mainTaskView"
            ads:layout_constraintTop_toBottomOf="@+id/tvTask" />

    </android.support.constraint.ConstraintLayout>

    <View
        android:id="@+id/propertiesView"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/darkOrange"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mainTaskView" />

    <include
        android:id="@+id/properties"
        layout="@layout/task_properties_layout"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mainTaskView" />

    <include
        android:id="@+id/snoozeRow"
        layout="@layout/snooze_layout"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mainTaskView" />

    <include
        android:id="@+id/taskIsOverdue"
        layout="@layout/task_overdue_layout"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mainTaskView" />

</android.support.constraint.ConstraintLayout>
