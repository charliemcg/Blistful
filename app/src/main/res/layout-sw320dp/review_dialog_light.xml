<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="320dp"
    android:layout_height="450dp"
    android:background="@color/lightTurquoise"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/reviewIcon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_launcher_og" />

    <TextView
        android:id="@+id/reviewTitle"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:gravity="center_vertical"
        android:text="@string/app_name"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/reviewSubtitle"
        app:layout_constraintLeft_toRightOf="@+id/reviewIcon"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="70dp"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/reviewSubtitle"
        android:layout_width="232dp"
        android:layout_height="21dp"
        android:gravity="center_vertical"
        android:text="@string/excusesAreForTheWeak"
        android:textColor="@color/dark_gray"
        app:layout_constraintBottom_toTopOf="@id/reviewTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/reviewIcon"
        app:layout_constraintTop_toBottomOf="@id/reviewTitle"
        tools:layout_editor_absoluteX="72dp"
        tools:layout_editor_absoluteY="34dp" />

    <TextView
        android:id="@+id/reviewTextView"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:background="@color/lightTurquoise"
        android:gravity="center"
        android:text="@string/looksLikeYouveBeen"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/reviewImageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reviewIcon"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="59dp" />

    <ImageView
        android:id="@+id/reviewImageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/lightTurquoise"
        android:contentDescription="@string/accessGoldTickGoldStars"
        android:src="@drawable/mushroom_cloud"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/reviewTextView"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="129dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:background="@color/lightTurquoise"
        android:gravity="center"
        android:text="@string/whyNoteLeaveAReview"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/negative"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reviewImageView"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="329dp" />

    <Button
        android:id="@+id/negative"
        android:layout_width="160dp"
        android:layout_height="52dp"
        android:layout_weight="1"
        android:background="@drawable/layout_border"
        android:clickable="true"
        android:text="@string/later"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/positive"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="399dp" />

    <Button
        android:id="@+id/positive"
        android:layout_width="160dp"
        android:layout_height="52dp"
        android:layout_weight="1"
        android:background="@drawable/layout_border"
        android:clickable="true"
        android:text="@string/oKExclamation"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/negative"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:layout_editor_absoluteY="398dp" />

</android.support.constraint.ConstraintLayout>
