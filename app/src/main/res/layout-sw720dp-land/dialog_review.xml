<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="450dp"
    android:layout_height="320dp"
    android:background="@color/lightTurquoise"
    android:gravity="center"
    android:orientation="vertical">

  <ImageView
      android:id="@+id/imgReviewIcon"
      android:layout_width="60dp"
      android:layout_height="60dp"
      android:src="@drawable/ic_launcher_og"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toStartOf="parent"/>

  <TextView
      android:id="@+id/tvReviewTitle"
      android:layout_width="250dp"
      android:layout_height="35dp"
      android:gravity="center_vertical"
      android:text="@string/app_name"
      android:textColor="@color/black"
      android:textSize="25sp"
      android:layout_marginStart="20dp"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toEndOf="@id/imgReviewIcon"/>

  <TextView
      android:id="@+id/tvReviewSubtitle"
      android:layout_width="232dp"
      android:layout_height="21dp"
      android:gravity="center_vertical"
      android:text="@string/excusesAreForTheWeak"
      android:textColor="@color/dark_gray"
      android:layout_marginStart="20dp"
      app:layout_constraintTop_toBottomOf="@id/tvReviewTitle"
      app:layout_constraintStart_toEndOf="@id/imgReviewIcon"
      app:layout_constraintBottom_toTopOf="@id/tvReviewOne"/>

  <TextView
      android:id="@+id/tvReviewOne"
      android:layout_width="match_parent"
      android:layout_height="68dp"
      android:layout_gravity="center"
      android:background="@color/lightTurquoise"
      android:gravity="center"
      android:text="@string/looksLikeYouveBeen"
      android:textAlignment="center"
      android:textColor="@color/black"
      android:textSize="25dp"
      app:layout_constraintTop_toBottomOf="@id/imgReviewIcon"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintBottom_toTopOf="@id/tvReview"/>

  <ImageView
      android:id="@+id/imgReview"
      android:layout_width="match_parent"
      android:layout_height="88dp"
      android:background="@color/lightTurquoise"
      android:contentDescription="@string/accessGoldTickGoldStars"
      android:src="@drawable/mushroom_cloud"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintBottom_toTopOf="@id/tvReviewTwo"/>

  <TextView
      android:id="@+id/tvReviewTwo"
      android:layout_width="match_parent"
      android:layout_height="35dp"
      android:layout_gravity="center"
      android:background="@color/lightTurquoise"
      android:gravity="center"
      android:text="@string/whyNoteLeaveAReview"
      android:textAlignment="center"
      android:textColor="@color/black"
      android:textSize="25dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintBottom_toTopOf="@id/btnNegative"/>

  <Button
      android:id="@+id/btnNegative"
      android:layout_width="225dp"
      android:layout_height="52dp"
      android:layout_weight="1"
      android:background="@drawable/layout_border"
      android:clickable="true"
      android:text="@string/later"
      android:textColor="@color/black"
      android:textSize="15sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toStartOf="@id/btnPositive"/>

  <Button
      android:id="@+id/btnPositive"
      android:layout_width="225dp"
      android:layout_height="52dp"
      android:layout_weight="1"
      android:background="@drawable/layout_border"
      android:clickable="true"
      android:text="@string/oKExclamation"
      android:textColor="@color/black"
      android:textSize="20sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@id/btnNegative"/>

</android.support.constraint.ConstraintLayout>
