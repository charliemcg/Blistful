<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pickerRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/turquoise"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/dueToolbar"
        style="@style/HeaderBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/turquoise"
        android:elevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/calendarFadedLight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:contentDescription="@string/accessGrayedOutCalendar"
        android:elevation="100dp"
        android:src="@drawable/calendar_faded_light"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/dateBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/dateBtn"
        app:layout_constraintVertical_bias="0.511" />

    <ImageView
        android:id="@+id/calendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:contentDescription="@string/accessCalendar"
        android:elevation="100dp"
        android:src="@drawable/calendar"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/dateBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/dateBtn"
        app:layout_constraintVertical_bias="0.511" />

    <TextView
        android:id="@+id/dateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:elevation="100dp"
        android:gravity="center"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/dateBtn"
        app:layout_constraintEnd_toEndOf="@+id/dateBtn"
        app:layout_constraintStart_toEndOf="@+id/calendarFadedLight"
        app:layout_constraintTop_toTopOf="@+id/dateBtn"  />

    <View
        android:id="@+id/dateBtn"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/color_picker_border_white"
        app:layout_constraintBottom_toTopOf="@+id/timeBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dueToolbar"  />

    <ImageView
        android:id="@+id/timeFadedLight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:contentDescription="@string/accessGrayedOutClock"
        android:elevation="100dp"
        android:src="@drawable/time_faded_light"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/timeBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/timeBtn"
        app:layout_constraintVertical_bias="0.588" />

    <ImageView
        android:id="@+id/time"
        android:layout_width="127dp"
        android:layout_height="130dp"
        android:layout_marginStart="52dp"
        android:contentDescription="@string/accessClock"
        android:elevation="100dp"
        android:src="@drawable/time"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/timeBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/timeBtn"
        app:layout_constraintVertical_bias="0.588" />

    <TextView
        android:id="@+id/timeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:gravity="center"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/timeBtn"
        app:layout_constraintEnd_toEndOf="@+id/timeBtn"
        app:layout_constraintStart_toEndOf="@+id/timeFadedLight"
        app:layout_constraintTop_toTopOf="@+id/timeBtn"  />

    <View
        android:id="@+id/timeBtn"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/color_picker_border_white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dateBtn"
        app:layout_constraintBottom_toTopOf="@id/lightRepeatLayout"/>

    <ImageView
        android:id="@+id/cancelRepeatLight"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:contentDescription="@string/accessNoRepeat"
        android:elevation="100dp"
        android:src="@drawable/repeat_none_light"
        app:layout_constraintLeft_toLeftOf="@+id/lightRepeatLayout"
        app:layout_constraintRight_toLeftOf="@+id/dailyLight"
        app:layout_constraintBottom_toBottomOf="@+id/lightRepeatLayout"
        app:layout_constraintTop_toTopOf="@+id/lightRepeatLayout"/>

    <ImageView
        android:id="@+id/cancelRepeat"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:contentDescription="@string/accessNoRepeat"
        android:elevation="100dp"
        android:src="@drawable/repeat_none"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="@+id/lightRepeatLayout"
        app:layout_constraintRight_toLeftOf="@+id/dailyLight"
        app:layout_constraintBottom_toBottomOf="@+id/lightRepeatLayout"
        app:layout_constraintTop_toTopOf="@+id/lightRepeatLayout" />

    <ImageView
        android:id="@+id/dailyLight"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:contentDescription="@string/accessDailyRepeat"
        android:elevation="100dp"
        android:src="@drawable/repeat_day_light"
        app:layout_constraintLeft_toRightOf="@+id/cancelRepeatLight"
        app:layout_constraintRight_toLeftOf="@+id/weeklyLight"
        app:layout_constraintBottom_toBottomOf="@+id/lightRepeatLayout"
        app:layout_constraintTop_toTopOf="@+id/lightRepeatLayout" />

    <ImageView
        android:id="@+id/daily"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:contentDescription="@string/accessDailyRepeat"
        android:elevation="100dp"
        android:src="@drawable/repeat_day"
        android:visibility="gone"
        app:layout_constraintLeft_toRightOf="@+id/cancelRepeatLight"
        app:layout_constraintRight_toLeftOf="@+id/weeklyLight"
        app:layout_constraintBottom_toBottomOf="@+id/lightRepeatLayout"
        app:layout_constraintTop_toTopOf="@+id/lightRepeatLayout"/>

    <ImageView
        android:id="@+id/weeklyLight"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:contentDescription="@string/circularArrowRepeatWeekly"
        android:elevation="100dp"
        android:src="@drawable/repeat_week_light"
        app:layout_constraintLeft_toRightOf="@+id/dailyLight"
        app:layout_constraintRight_toLeftOf="@+id/monthlyLight"
        app:layout_constraintBottom_toBottomOf="@+id/lightRepeatLayout"
        app:layout_constraintTop_toTopOf="@+id/lightRepeatLayout" />

    <ImageView
        android:id="@+id/weekly"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:contentDescription="@string/redCircularArrowRepeatWeekly"
        android:elevation="100dp"
        android:src="@drawable/repeat_week"
        android:visibility="gone"
        app:layout_constraintLeft_toRightOf="@+id/dailyLight"
        app:layout_constraintRight_toLeftOf="@+id/monthlyLight"
        app:layout_constraintBottom_toBottomOf="@+id/lightRepeatLayout"
        app:layout_constraintTop_toTopOf="@+id/lightRepeatLayout"  />

    <ImageView
        android:id="@+id/monthlyLight"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:contentDescription="@string/accessMonthlyRepeat"
        android:elevation="100dp"
        android:src="@drawable/repeat_month_light"
        app:layout_constraintLeft_toRightOf="@+id/weeklyLight"
        app:layout_constraintRight_toRightOf="@id/lightRepeatLayout"
        app:layout_constraintBottom_toBottomOf="@+id/lightRepeatLayout"
        app:layout_constraintTop_toTopOf="@+id/lightRepeatLayout" />

    <ImageView
        android:id="@+id/monthly"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:contentDescription="@string/accessMonthlyRepeat"
        android:elevation="100dp"
        android:src="@drawable/repeat_month"
        android:visibility="gone"
        app:layout_constraintLeft_toRightOf="@+id/weeklyLight"
        app:layout_constraintRight_toRightOf="@id/lightRepeatLayout"
        app:layout_constraintBottom_toBottomOf="@+id/lightRepeatLayout"
        app:layout_constraintTop_toTopOf="@+id/lightRepeatLayout"/>

    <View
        android:id="@+id/lightRepeatLayout"
        android:layout_width="match_parent"
        android:layout_height="118dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/color_picker_border_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dateBtn"
        app:layout_constraintVertical_bias="0.964" />

</android.support.constraint.ConstraintLayout>