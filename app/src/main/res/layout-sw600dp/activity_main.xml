<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.violenthoboenterprises.blistful.MainActivity"
    android:orientation="vertical"
    android:id="@+id/activityRoot"
    android:background="@color/turquoise">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_light"
        style="@style/HeaderBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/turquoise"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.LightTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/ThemeOverlay.LightTheme"
        app:title=""
        app:titleTextColor="@color/purple">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:contentDescription="@string/accessAppNamePurple"
            android:src="@drawable/title_graphic" />

    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="881dp"
        android:layout_below="@+id/toolbar_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_light"
        tools:listitem="@layout/task_layout" />

    <!--<ListView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:id="@+id/theListView"-->
        <!--android:layout_below="@+id/toolbar_light"-->
        <!--android:background="@color/turquoise"-->
        <!--android:descendantFocusability="blocksDescendants"/>-->

    <!--TODO don't delete this-->
    <!--<ImageView-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--android:id="@+id/noTasksWhite"-->
    <!--android:src="@drawable/no_tasks_light"-->
    <!--android:contentDescription="@string/accessInformUserNoTasks"/>-->

    <EditText
        android:id="@+id/taskNameEditText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/purple"
        android:paddingLeft="5dp"
        android:maxLines="1"
        android:maxLength="50"
        android:inputType="textCapSentences"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        android:hint="@string/taskTitle"
        android:imeOptions="actionDone"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="84dp"
        android:layout_height="124dp"
        android:layout_gravity="bottom|end"
        android:layout_margin="32dp"
        android:src="@drawable/ic_add"
        app:backgroundTint="@color/purple"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.942"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.974" />

    <RelativeLayout
        android:id="@+id/toastView"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:background="@color/purple"
        android:visibility="gone">

        <TextView
            android:id="@+id/toast"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:textColor="@color/dark_gray"
            android:textSize="17sp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_margin="1dp"/>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
