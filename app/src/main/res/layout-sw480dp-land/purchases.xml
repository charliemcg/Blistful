<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="395dp"
    android:layout_height="295dp"
    android:background="@color/lightTurquoise"
    android:gravity="center"
    android:orientation="vertical">

  <ImageView
      android:id="@+id/imageView2"
      android:layout_width="60dp"
      android:layout_height="60dp"
      android:src="@drawable/ic_launcher_og"
      app:layout_constraintBottom_toTopOf="@+id/imageView"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.0" />

  <TextView
      android:layout_width="223dp"
      android:layout_height="35dp"
      android:gravity="center_vertical"
      android:text="Upgrade to pro!"
      android:textColor="@color/black"
      android:textSize="25sp"
      app:layout_constraintBottom_toTopOf="@+id/imageView"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@+id/imageView2"
      app:layout_constraintTop_toTopOf="parent" />

  <ImageView
      android:id="@+id/imageView"
      android:layout_width="match_parent"
      android:layout_height="117dp"
      android:background="@color/lightTurquoise"
      android:contentDescription="@string/accessYellowShoppingCart"
      android:src="@drawable/purchase_graphic"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/imageView2"
      app:layout_constraintBottom_toTopOf="@+id/textView"
      tools:layout_editor_absoluteY="59dp" />

  <TextView
      android:id="@+id/textView"
      android:layout_width="match_parent"
      android:layout_height="62dp"
      android:background="@color/lightTurquoise"
      android:text=" Remove all ads. Set unlimited reminders. Get notifications on your device."
      android:textAlignment="center"
      android:textColor="@color/black"
      android:textSize="20dp"
      app:layout_constraintBottom_toTopOf="@+id/negative"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/imageView" />

  <Button
      android:id="@+id/negative"
      android:layout_width="197.5dp"
      android:layout_height="50dp"
      android:background="@drawable/layout_border"
      android:clickable="true"
      android:text="@string/later"
      android:textColor="@color/black"
      android:textSize="15sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintRight_toLeftOf="@+id/positive"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView" />

  <Button
      android:id="@+id/positive"
      android:layout_width="197.5dp"
      android:layout_height="50dp"
      android:background="@drawable/layout_border"
      android:clickable="true"
      android:text="Buy now!"
      android:textColor="@color/black"
      android:textSize="20sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintLeft_toRightOf="@+id/negative"
      app:layout_constraintTop_toBottomOf="@+id/textView" />

</android.support.constraint.ConstraintLayout>
